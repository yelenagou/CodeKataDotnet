@page
@model CodeKata_ModelBinding.Pages.Cases.ListModel

    <table class="table">
        @foreach (var caseItem in Model.ListItems)
        {
        <tr>
            <td>@caseItem.Name</td>
            <td>@caseItem.Location</td>
            <td>@caseItem.ListItemType</td>
            <td>
                <a class="btn btn-dark"
                   asp-page="Details"
                   asp-route-listItemId="@caseItem.Id">
                    Details
                </a>
            </td>
            <td>
                <a class="btn btn-dark"
                   asp-page="Update"
                   asp-route-listItemId="@caseItem.Id">
                    Update
                </a>
            </td>
            <td>
                <a class="btn btn-dark"
                   asp-page="Delete"
                   asp-route-listItemId="@caseItem.Id">
                    Delete
                </a>
            </td>
        </tr>
        }
    </table>
<h1>Number of Items are @Model.ListItems.Count()</h1>

